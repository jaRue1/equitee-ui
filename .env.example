# Copy this file to .env.local and fill in your actual values

# Frontend environment variables - SECURE CONFIGURATION
# The UI only talks to our API, never directly to third-party services
NEXT_PUBLIC_API_URL=http://localhost:3001

# NextAuth.js configuration (REQUIRED for Google OAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Google OAuth credentials (REQUIRED for authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Production Environment Variables (for Vercel deployment)
# NEXT_PUBLIC_API_URL=https://equitee-api.onrender.com
# NEXTAUTH_URL=https://equitee.vercel.app

